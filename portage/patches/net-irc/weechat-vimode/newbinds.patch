+                if isinstance(command, str):
+                    yield cls.command_to_action(command)
+                else:
+                    yield command
+                print('cmd[len(keys):]: %s' % (cmd[len(keys):], ))
+                yield from cls.get_cmd_actions(cmd[len(keys):])
